        datum = m.top.json
        m.top.id = datum.id
        m.top.subTitle = datum
        m.top.labelText = datum.Name
    end sub

    sub setPoster()
    end sub
  ]]>
  </script>
  <interface>
    <field id="image" type="node" />
    <field id="Type" type="string" />
